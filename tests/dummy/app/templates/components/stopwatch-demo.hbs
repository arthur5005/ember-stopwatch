<div class="container p-4 mx-auto">
    <div class="grid grid-cols-3 grid-rows-1 gap-4">
        <StopwatchDisplay
            @title="100ms ticks"
            @stopwatch={{this.stopwatch}}
            @start={{this.start}}
            @stop={{this.stop}}
            @reset={{this.reset}}
            @class="bg-white"
        />

        <StopwatchDisplay
            @title="1s ticks"
            @stopwatch={{this.secondWatch}}
            @start={{this.start}}
            @stop={{this.stop}}
            @reset={{this.reset}}
            @class="bg-white"
        />

        <StopwatchDisplay
            @title="5s ticks"
            @stopwatch={{this.fiveSecondWatch}}
            @start={{this.start}}
            @stop={{this.stop}}
            @reset={{this.reset}}
            @class="bg-white"
        />
    </div>

    <div class="mx-auto w-full flex flex-col items-center mt-4 bg-white rounded">
        <div class="text-2xl font-bold">All stopwatches</div>
        <StopwatchControls
            @class="justify-center"
            @start={{fn (pipe
                (fn this.start this.stopwatch)
                (fn this.start this.secondWatch)
                (fn this.start this.fiveSecondWatch)
            )}}
            @stop={{fn (pipe
                (fn this.stop this.stopwatch)
                (fn this.stop this.secondWatch)
                (fn this.stop this.fiveSecondWatch)
            )}}
            @reset={{fn (pipe
                (fn this.reset this.stopwatch)
                (fn this.reset this.secondWatch)
                (fn this.reset this.fiveSecondWatch)
            )}}
        />

        <div class="text-xl flex flex-row items-center my-2">
            <label>Force stop/reset?</label>
            <Input
                @class="rounded ml-2 h-6 w-6"
                @type="checkbox"
                @checked={{this.force}}
            />
        </div>
    </div>
</div>